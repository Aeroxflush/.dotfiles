{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",

      // not working if you URL pointing to a remote config, see https://ohmyposh.dev/docs/installation/customize

      // "segments": [
      //   {
      //     "type": "spotify",
      //     "style": "plain",
      //     "powerline_symbol": "î‚°",
      //     "foreground": "#ffffff",
      //     "template": " {{ .Icon }} {{ .Artist }} - {{ .Title }}"
      //   }
      // ],
      // "alignment": "left",
      // "newline": true,

      "segments": [
        {
          "type": "time",
          "style": "powerline",
          "foreground": "#cccccc",
          "background": "#881798",
          "template": " \ue641 {{ .Time }} ",
          "properties": {
            "time_format": "15:04"
          }
        },
        {
          "template": " \ueb99 {{ .UserName }} ",
          "type": "session",
          "foreground": "#cd5e42",
          "style": "plain"
        },
        {
          "foreground": "#13a10e",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "plain",
          "template": " \uf07b {{ .Path }}",
          "type": "path"
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#000000",
          "properties": {
            "display_status": true,
            "display_stash_count": true
          }
        },

        {
          "type": "text",
          "style": "plain",
          "foreground": "#13a10e",
          "template": " \u276f"
        }
      ]
    }
  ],
  "final_space": true
}
