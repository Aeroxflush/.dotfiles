{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "user",
					"style": "powerline",
					"foreground": "#ffffff",
					"background": "#4c566a",
					"properties": {
						"prefix": " "
					}
				},
				{
					"type": "path",
					"style": "powerline",
					"foreground": "#ffffff",
					"background": "#5e81ac",
					"properties": {
						"style": "folder"
					}
				},
				{
					"type": "git",
					"style": "powerline",
					"foreground": "#ffffff",
					"background": "#bf616a",
					"properties": {
						"display_status": true,
						"display_stash_count": true
					}
				},
				{
					"type": "time",
					"style": "plain",
					"foreground": "#d8dee9",
					"properties": {
						"time_format": "15:04"
					}
				},
				{
					"type": "text",
					"style": "plain",
					"foreground": "#a3be8c",
					"template": " "
				}
			]
		}
	],
	"console_title": true,
	"final_space": true
}
