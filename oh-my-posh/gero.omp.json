{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "horizontal_spacing": 2,
      "segments": [
        {
          "type": "time",
          "style": "powerline",
          "foreground": "#cccccc",
          "background": "#881798",
          "properties": {
            "time_format": "15:04",
            "prefix": "  "
          }
        },
        {
          "template": " \ueb99 {{ .UserName }} ",
          "type": "session",
          "foreground": "#cd5e42",
          "style": "plain",
          "properties": {
            "prefix": " îˆ• "
          }
        },
        {
          "foreground": "#13a10e",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "plain",
          "template": " \uf07b {{ .Path }}",
          "type": "path"
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#bf616a",
          "properties": {
            "display_status": true,
            "display_stash_count": true
          }
        },

        {
          "type": "text",
          "style": "plain",
          "foreground": "#13a10e",
          "template": " \u276f"
        }
      ]
    }
  ]
}
