{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "#881798",
          "template": " \ue641 {{ .CurrentDate | date .Format }} \u276f ",
          "properties": {
            "time_format": "15:04"
          }
        },
        {
          "template": " \ueb99 {{ .UserName }} \u276f ",
          "type": "session",
          "foreground": "#cd5e42",
          "style": "plain"
        },
        {
          "foreground": "#13a10e",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "plain",
          "template": " \uf07b {{ .Path }}",
          "type": "path"
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#000000",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "display_status": true,
            "display_stash_count": true
          }
        },

        {
          "type": "text",
          "style": "plain",
          "foreground": "#13a10e",
          "template": " \u276f"
        }
      ]
    }
  ],
  "final_space": true
}
