{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "horizontal_spacing": 2,
      "segments": [
        {
          "type": "time",
          "style": "powerline",
          "foreground": "#d8dee9",
          "background": "#5e81ac",
          "properties": {
            "time_format": "15:04",
            "suffix": " "
          }
        },
        {
          "template": "\ueb99 {{ .UserName }}",
          "type": "session",
          "style": "plain",
          "properties": {
            "prefix": "  "
          }
        },
        {
          "foreground": "#0CA0D8",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "plain",
          "template": " [ \uf07b {{ .Path }} ]",
          "type": "path"
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#bf616a",
          "properties": {
            "display_status": true,
            "display_stash_count": true
          }
        },

        {
          "type": "text",
          "style": "plain",
          "foreground": "#a3be8c",
          "template": " "
        }
      ]
    }
  ],
  "final_space": true
}
